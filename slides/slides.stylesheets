div.verysmall {
  font-size: 0.5em;
}

div.small {
  font-size: 0.7em;
}

div.medium {
  font-size: 0.85em;
}

div.big {
  font-size: 1.3em;
}

pre {
    border-radius: 10px;
    box-shadow: 0 0 15px #777;
    background-color: white;
    padding: 20px;
    margin-bottom: 15px;
}

.first, .last {
  text-align: center;
}
